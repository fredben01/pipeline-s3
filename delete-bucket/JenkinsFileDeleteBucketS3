pipeline {
    agent {
        docker {
            image 'mlungwsr/ubuntu-awscli'
            args '-u 0'
        }
    }

    stages {
        stage ('Connection') {
            steps {
                sh "aws configure set aws_access_key_id AKIAVFTYX6H4L436GXXC"
                sh "aws configure set aws_secret_access_key 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"
                sh "aws configure set region us-east-1"
            }
        }
        stage('Test'){
            steps {
                sh 'aws --version'
                sh 'aws s3 ls'
            }
        }
    }
}